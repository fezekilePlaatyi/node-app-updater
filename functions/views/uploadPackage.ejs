   <body>
      <ul class="nav">
         <li class="logo link" id="#">Admin Console - Mobile</li>
         <li tabindex="0"><i class="fa fa-cog" style="font-size:36px"></i></li>
         <li tabindex="0" id="help_on_upload"><i class="fa fa-question-circle" style="font-size:36px"></i></li>
      </ul>
      <div class="form-div">
      <div class="form-container">
         <div class="title"><b>Upload App <i class="fa fa-android" style="color: green;" aria-hidden="true"></i></b></div>
         <div>
            <br>
            
         </div>
         <form action="/uploadApk" enctype="multipart/form-data" method="POST">
        
            <div class="custom-file mb-3 file">
               <input type="file" class="custom-file-input" name="apk_file" required>
               <label class="custom-file-label" for="customFile">Choose file</label>
            </div>

            <div class="custom-file mb-3">
                <textarea class="form-control" placeholder="Describe feature or fixes of this Update..." name="update_description" required></textarea>
                <br>
            </div>

            <input type="text" name="fileHash" id="fileHash" style="display: none;">

            <div class="form-group">
                <select class="form-control select-app-name" name="app_name"  required>
                    <option disabled selected value> -- Select application name -- </option>
                    <option value="nitrologger">Nitro Logger</option>
                    <option value="opitblast">O-Pit Blast</option>
                </select>
            </div>

            <button type="submit" class="button">Submit</button> 
         </form>
      </div>

      <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/rollups/sha1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/components/sha1-min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/components/lib-typedarrays-min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/rollups/aes.js"></script>
        <script>
        $(document).ready(function () {
            function getHashOfFile() {
                var reader = new FileReader(); //define a Reader
                var file = $("#apk_file")[0].files[0]; //get the File object 
                if (!file) {
                    alert("no file selected");
                    return;
                } //check if user selected a file
        
                reader.onload = function (f) {
                    var file_result = this.result; // this == reader, get the loaded file "result"
                    var file_wordArr = CryptoJS.lib.WordArray.create(file_result); //convert blob to WordArray , see https://code.google.com/p/crypto-js/issues/detail?id=67
                    var sha1_hash = CryptoJS.SHA1(file_wordArr); //calculate SHA1 hash
                    
                    
                    $("#fileHash").val(sha1_hash) 
                    $("#uploadForm").submit();
                };
                reader.readAsArrayBuffer(file); //read file as ArrayBuffer
            }

            $("#uploadForm").one('submit', function(e) {
                e.preventDefault();
                getHashOfFile()
            });
        });
        </script>
      <script>
            $(".custom-file-input").on("change", function() {
                var fileName = $(this).val().split("\\").pop()
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName)
            })

            $(".link").click(function() {
                var select = $(this).attr("id")
                window.location.replace(`/${select}`);
            })

            $('#help_on_upload').click(function() {
                let helpInfo = `
